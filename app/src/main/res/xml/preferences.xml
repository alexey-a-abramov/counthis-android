<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Visual Settings -->
    <PreferenceCategory
        android:title="@string/category_appearance"
        android:summary="@string/category_appearance_summary">

        <ListPreference
            android:key="color_theme"
            android:title="@string/color_theme"
            android:summary="@string/color_theme_summary"
            android:entries="@array/color_theme_names"
            android:entryValues="@array/color_theme_values"
            android:defaultValue="DEFAULT"
            android:icon="@android:drawable/ic_menu_preferences" />

        <ListPreference
            android:key="background_style"
            android:title="@string/background_style"
            android:summary="@string/background_style_summary"
            android:entries="@array/background_names"
            android:entryValues="@array/background_values"
            android:defaultValue="plain" />

        <ListPreference
            android:key="item_theme"
            android:title="@string/item_theme"
            android:summary="@string/item_theme_summary"
            android:entries="@array/item_theme_names"
            android:entryValues="@array/item_theme_values"
            android:defaultValue="ANIMALS" />

    </PreferenceCategory>

    <!-- Gameplay Settings -->
    <PreferenceCategory
        android:title="@string/category_gameplay"
        android:summary="@string/category_gameplay_summary">

        <ListPreference
            android:key="default_pattern_mode"
            android:title="@string/default_pattern_mode"
            android:summary="@string/default_pattern_mode_summary"
            android:entries="@array/pattern_mode_names"
            android:entryValues="@array/pattern_mode_values"
            android:defaultValue="SCATTERED" />

        <SeekBarPreference
            android:key="answer_range_percent"
            android:title="@string/answer_range_percent"
            android:summary="@string/answer_range_percent_summary"
            android:defaultValue="25"
            android:min="10"
            android:max="60"
            app:showSeekBarValue="true"
            app:updatesContinuously="true" />

    </PreferenceCategory>

    <!-- Information -->
    <PreferenceCategory
        android:title="@string/category_information">

        <Preference
            android:key="about_app"
            android:title="@string/about_countthis"
            android:summary="@string/version_unknown"
            android:icon="@android:drawable/ic_dialog_info"
            app:selectable="false" />

        <Preference
            android:key="algorithm_info"
            android:title="@string/algorithm_info_title"
            android:summary="@string/algorithm_info_summary"
            android:icon="@android:drawable/ic_menu_info_details"
            app:selectable="false" />

        <Preference
            android:key="license_info"
            android:title="@string/license_title"
            android:summary="@string/license_summary"
            android:icon="@android:drawable/ic_menu_agenda"
            app:selectable="false" />

    </PreferenceCategory>

</PreferenceScreen>
